<!doctype html>
<html lang="fr">

{% include "head.njk" %}

<body>

    {% include "header.njk" %}

    <main>

        {{ content | safe }}

        <h2>Projets</h2>

        <div class="projets">
            {%- for projet, metas in projets -%}
            <article>
                <h3>{{ projet }}</h3>

                <ul class="inline-list">
                    {%- for name, target in metas.liens -%}
                    <li><a href="{{ target }}" target="_blank">{{ name }}</a></li>
                    {%- endfor -%}
                </ul>

                <p>{{ metas.description }}</p>
            </article>
            {%- endfor -%}
        </div>

    </main>

    <aside>

        <h2>Devblog</h2>

        <ul class="page-list">
            {%- for post in collections.devblog | reverse -%}
            <li><a href="{{ post.url }}">{{ post.data.title }}</a></li>
            {%- endfor -%}
        </ul>

    </aside>

    {% include "footer.njk" %}

</body>

</html>